@model SignUpModel

<form asp-controller="SignUp" asp-action="SignUp" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Sign Up</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="UserDisplayName">Display Name:</label>
            <input id="displayName" class="form-control" asp-for="UserDisplayName" />
            <label class="form-label" asp-for="UserEmail">Email:</label>
            <input id="email" class="form-control" asp-for="UserEmail" /> 
            <label class="form-label" asp-for="UserPassword">Password:</label>
            <input id="password" class="form-control" asp-for="UserPassword" />
            <label class="form-label" asp-for="UserConfirmPassword">Confirm Password:</label>
            <input id="confirmPassword" class="form-control" asp-for="UserConfirmPassword" />
            <button id="submit" class="btn btn-primary" disabled type="submit">Sign Up</button>  
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Login">Back to login?</a>
        </div>
    </div>
</form>

<script defer src="~/js/SignUp.js"></script>
